{
  "name": "@borisch/snitch",
  "version": "1.2.2",
  "description": "Modular analytics tracking library with pluggable transports",
  "keywords": [
    "analytics",
    "tracking",
    "plugins",
    "beacon",
    "web-vitals"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "typings": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./server": {
      "types": "./dist/cjs/server.d.ts",
      "import": "./dist/esm/server.js",
      "require": "./dist/cjs/server.js"
    }
  },
  "files": [
    "dist"
  ],
  "author": "Boris Chumichev <borisboha@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BorisChumichev/snitch.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json && node scripts/fix-esm-imports.js",
    "test": "jest",
    "test:watch": "jest --coverage --watch"
  },
  "jest": {
    "transform": {
      "^.+\\.[tj]s$": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "packages/**/*.ts"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "delay": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.0",
    "rimraf": "^6.0.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.0",
    "tslib": "^2.8.0",
    "typescript": "^5.8.0"
  },
  "dependencies": {
    "web-vitals": "^3.5.0"
  }
}
