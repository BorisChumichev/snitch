{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true
  },
  "include": ["index.ts", "server.ts", "packages/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/testutil/**"]
}
